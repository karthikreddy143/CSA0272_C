#include <stdio.h>

int main() {
    int num, sum = 0, digit;
    
    printf("Enter a number: ");
    scanf("%d", &num);
    
    for ( ; num > 0; num /= 10) {
        digit = num % 10;  // get the rightmost digit
        sum += digit;      // add the digit to the sum
    }
    
    printf("The sum of the digits is %d", sum);
    
    return 0;
}
